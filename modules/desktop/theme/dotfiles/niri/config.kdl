// === QUAD-CHECKED CONFIG.KDL ===

// --- Input & Gestures ---
input {
    keyboard {
        xkb { layout "us"; }
    }
    touchpad {
        tap
        dwt
        natural-scroll
    }
    mouse {
        accel-profile "flat"
    }
    focus-follows-mouse max-scroll-amount="0%"
    warp-mouse-to-focus
}

// KILL HOT CORNERS (User Request)
gestures {
    hot-corners {
        off
    }
}

// --- Output ---
// (Positions are hardcoded based on your dump. If monitors act weird, delete 'position' lines)
output "DP-1" {
    mode "3440x1440@100.0"
    scale 1.0
    position x=2740 y=1455
}
output "DP-2" {
    mode "1920x1080@60.0"
    position x=820 y=1714
}
output "DP-3" {
    mode "1920x1080@60.0"
    position x=6180 y=1714
}

// --- Layout ---
layout {
    gaps 8
    center-focused-column "never"
    always-center-single-column

    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
        proportion 1.0
    }

    default-column-width { proportion 0.5; }

    focus-ring {
        width 2
        active-color "#cba6f7"
        inactive-color "#45475a"
    }

    border {
        off
    }

    shadow {
        on
        softness 30
        spread 5
        offset x=0 y=5
        color "#00000070"
    }
}

// --- Workspaces ---
workspace "1" {}
workspace "2" {}
workspace "3" {}

// --- Window Rules ---
window-rule {
    geometry-corner-radius 12
    clip-to-geometry true
    draw-border-with-background false
}

// 1. Social (Deezer/Vesktop -> Workspace '1')
window-rule {
    match app-id="deezer-enhanced"
    open-on-workspace "1"
    default-column-width { proportion 0.33333; }
}
window-rule {
    match app-id="vesktop"
    open-on-workspace "1"
    default-column-width { proportion 0.66667; }
}

// 2. Browser (Vivaldi -> Workspace '2')
window-rule {
    match app-id=r#"^vivaldi.*$"#
    open-on-workspace "2"
    open-fullscreen true
}

// 3. Floating Rules & Tweaks
// ... (rest of window rules)
window-rule {
    match app-id=r#"^org\.wezfurlong\.wezterm$"#
    default-column-width { proportion 0.5; }
}

// Picture-in-Picture
window-rule {
    match app-id=r#"firefox$"# title="^Picture-in-Picture$"
    open-floating true
}

// File Managers (Floating overrides)
window-rule {
    match app-id="yazi-floating"
    open-floating true
    default-column-width { proportion 0.6; }
    opacity 0.95
}
window-rule {
    match app-id="thunar-float"
    open-floating true
    default-column-width { proportion 0.6; }
    opacity 0.95
}

// Notifications (Noctalia & Steam)
window-rule {
    match app-id="^noctalia-shell$" title="^notification-window$"
    open-floating true
    default-floating-position x=16 y=16 relative-to="top-right"
    open-focused false
}
window-rule {
    match app-id="^steam$" title="^notificationtoasts.*$"
    open-floating true
    open-focused false
    default-floating-position x=16 y=16 relative-to="top-right"
}

// --- Keybinds ---
binds {
    // === Applications ===
    Mod+Return { spawn "wezterm"; }
    Mod+Shift+Return { spawn "wezterm" "start" "--class" "wezterm-float"; }
    Mod+B { spawn "vivaldi"; }

    // File Managers
    Mod+T { spawn "wezterm" "start" "--class" "yazi-floating" "--" "yazi"; }
    Mod+Shift+T { spawn "thunar"; }

    // === NOCTALIA FIX (Split Arguments) ===
    // We use 'qs' directly. The "-c" flag tells it which shell config to talk to.

    // Launcher
    Mod+Space { spawn "qs" "-c" "noctalia-shell" "ipc" "call" "launcher" "toggle"; }

    // Clipboard
    Mod+V { spawn "qs" "-c" "noctalia-shell" "ipc" "call" "launcher" "clipboard"; }

    // Wallpaper Picker
    Mod+Shift+W { spawn "qs" "-c" "noctalia-shell" "ipc" "call" "wallpaper" "toggle"; }

    // Session Menu (Logout/Reboot)
    Mod+Shift+Q { spawn "qs" "-c" "noctalia-shell" "ipc" "call" "sessionMenu" "toggle"; }

    // Settings / Control Center
    Mod+Ctrl+Shift+S { spawn "qs" "-c" "noctalia-shell" "ipc" "call" "settings" "toggle"; }

    // === System Actions ===
    Mod+S { screenshot; }
    Mod+Q { close-window; }
    Mod+L { spawn "loginctl" "lock-session"; }
    Mod+U { power-off-monitors; }

    // === Window Focus ===
    Mod+Left  { focus-column-left; }
    Mod+Right { focus-column-right; }
    Mod+Down  { focus-workspace-down; }
    Mod+Up    { focus-workspace-up; }

    // === Window Movement ===
    Mod+Shift+Left  { move-column-left; }
    Mod+Shift+Right { move-column-right; }
    Mod+Shift+Down  { move-column-to-workspace-down; }
    Mod+Shift+Up    { move-column-to-workspace-up; }

    // === Workspace Targeting ===
    Mod+1 { focus-workspace "1"; }
    Mod+2 { focus-workspace "2"; }
    Mod+3 { focus-workspace "3"; }

    Mod+Shift+1 { move-column-to-workspace "1"; }
    Mod+Shift+2 { move-column-to-workspace "2"; }
    Mod+Shift+3 { move-column-to-workspace "3"; }

    // === Layout & Sizing ===
    Mod+Minus { set-column-width "33.333%"; }
    Mod+Equal { set-column-width "50%"; }
    Mod+BracketLeft { set-column-width "66.667%"; }
    Mod+BracketRight { set-column-width "100%"; }
    Mod+R { switch-preset-column-width; }
    Mod+F { maximize-column; }
    Mod+Shift+F { fullscreen-window; }
    Mod+C { center-column; }
    Mod+Comma  { consume-window-into-column; }
    Mod+Period { expel-window-from-column; }

    // === Audio & Hardware ===
    // Using swayosd-client for OSD feedback
    XF86AudioRaiseVolume allow-when-locked=true { spawn "swayosd-client" "--output-volume" "raise"; }
    XF86AudioLowerVolume allow-when-locked=true { spawn "swayosd-client" "--output-volume" "lower"; }
    XF86AudioMute        allow-when-locked=true { spawn "swayosd-client" "--output-volume" "mute-toggle"; }

    // Media Controls
    XF86AudioPlay        allow-when-locked=true { spawn "playerctl" "play-pause"; }
    XF86AudioNext        allow-when-locked=true { spawn "playerctl" "next"; }
    XF86AudioPrev        allow-when-locked=true { spawn "playerctl" "previous"; }
}

// --- Startup ---
spawn-at-startup "noctalia-shell"
spawn-at-startup "swayosd-server"
spawn-at-startup "xwayland-satellite"
// Removed conflicting swww-daemon (Noctalia handles wallpaper)
spawn-at-startup "bash" "-c" "wl-paste --watch cliphist store"
spawn-at-startup "bash" "-c" "/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1"

// App Startup
spawn-at-startup "bash" "-c" "sleep 2 && corectrl --minimize"
spawn-at-startup "deezer-enhanced.js" "--disable-gpu" "--enable-features=UseOzonePlatform" "--ozone-platform=wayland"
spawn-at-startup "vesktop" "--enable-features=UseOzonePlatform" "--ozone-platform=wayland"
spawn-at-startup "vivaldi"

